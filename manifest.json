{
    "manifest_version": 2,
    "name": "Explicit Content Blocking and Keylogging",
    "version": "1.0",
    "background": {
        "scripts": [
            "firebase-app.js",
            "firebase-auth.js",
            "firebase-database.js",
            "email.js",
            "background.js"
        ],
        "persistent": true
    },
    "permissions": [
        "activeTab",
        "webRequest",
        "webRequestBlocking",
        "<all_urls>",
        "tabs",
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "web_accessible_resources": [
        "login.js"
    ],
    "content_security_policy": "script-src-elem script-src 'self' https://www.gstatic.com https://apis.google.com https://cdn.emailjs.com;; object-src 'self'"
}